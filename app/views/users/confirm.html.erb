<h2>Confirm signup info</h2>

<div class="row">
  <div class="col-md-4">
    <h4>Are you sure this information is correct?</h4>
    <h5>Username: <%= @user.name %> </h5>
    <h5>Email: <%= @user.email %> </h5>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4">
    <%= button_to "No", {controller: "users", action: "new"}, method: :get, class: 'btn btn-failure' %>
  </div>
</div>
