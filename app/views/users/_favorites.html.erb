<% @user.favorites.each do |fave| %>
  <div class="media">
    <div class="pull-left"><%= image_tag(fave.post.user.avatar_url(48)) %></div>
    <div class="media-body">
      <h4><%= link_to fave.post.title, topic_post_path(fave.post.topic, fave.post) %></h4>
      <small>
        submitted <%= time_ago_in_words(fave.post.created_at) %> ago by <%= fave.post.user.name %><br>
        <%= pluralize(fave.post.comments.count, 'comment') %>,
        <%= pluralize(fave.post.points, 'point') %>
      </small>
    </div>
  </div>

<% end %>