<h1>New Sponsored Post</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for sponsored posts</p>
    <ul>
      <li>Good products</li>
      <li>Cheap prices</li>
      <li>No scams</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @sponsored_post] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Sponsored Post Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Sponsored Post Body" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_area :price, rows: 1, class: 'form-control', placeholder: "Enter Sponsored Post Price" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>